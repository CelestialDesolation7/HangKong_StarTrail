<Window x:Class="HangKong_StarTrail.Views.KnowledgeBaseForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HangKong_StarTrail.Views"
        mc:Ignorable="d"
        Title="宇宙知识库" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 左侧导航区域 -->
        <DockPanel Grid.Column="0" Background="#1A1A1A">
            <StackPanel DockPanel.Dock="Top" Margin="10">
                <TextBlock Text="宇宙知识库" 
                         Foreground="White" 
                         FontSize="20" 
                         FontWeight="Bold" 
                         Margin="0,0,0,10"/>
                
                <TextBox x:Name="SearchBox" 
                         TextChanged="SearchBox_TextChanged"
                         Padding="5"
                         Background="#2A2A2A"
                         Foreground="White"
                         BorderBrush="#3A3A3A"/>
                
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Button Content="测验" 
                            Click="QuizButton_Click"
                            Background="#4169E1"/>
                    <Button Content="收藏夹" 
                            Click="FavoritesButton_Click"
                            Background="#4169E1"/>
                </StackPanel>
            </StackPanel>

            <TreeView x:Name="KnowledgeTree" 
                      Margin="10,0,10,10"
                      Background="Transparent"
                      Foreground="White"
                      BorderThickness="0"
                      SelectedItemChanged="KnowledgeTree_SelectedItemChanged">
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                        <TextBlock Text="{Binding Title}"/>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
        </DockPanel>

        <!-- 右侧内容区域 -->
        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="ContentTitle" 
                       Grid.Row="0"
                       FontSize="24" 
                       FontWeight="Bold"
                       Margin="0,0,0,10"/>

            <WebBrowser x:Name="ContentBrowser" 
                        Grid.Row="1"
                        Margin="0,0,0,10"/>

            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right">
                <Button Content="返回主界面" 
                        Click="BackButton_Click"
                        Background="#4169E1"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window> 