<Window x:Class="HangKong_StarTrail.Views.KnowledgeBaseForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HangKong_StarTrail.Views"
        mc:Ignorable="d"
        Title="宇宙知识库" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"
        Background="#1A1A2E">
    
    <!-- 主布局 -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>  <!-- 顶部标题栏 -->
            <RowDefinition Height="*"/>   <!-- 主内容区 -->
        </Grid.RowDefinitions>
        
        <!-- 顶部标题栏 -->
        <Border Grid.Row="0" Background="#0F0F1E">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- 标题 -->
                <TextBlock Grid.Column="0" 
                           Text="星穹知识库" 
                           Foreground="#E0E0FF" 
                           FontSize="24" 
                           FontWeight="Bold"
                           Margin="20,0,0,0"
                           VerticalAlignment="Center"/>
                
                <!-- 搜索框 -->
                <Border Grid.Column="1" 
                        Width="400" 
                        Height="36" 
                        Background="#252550" 
                        CornerRadius="18" 
                        Margin="20,0"
                        HorizontalAlignment="Center">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox x:Name="SearchTextBox" 
                                 Grid.Column="0"
                                 Background="Transparent" 
                                 BorderThickness="0"
                                 Foreground="#E0E0FF"
                                 Margin="15,0,0,0"
                                 VerticalAlignment="Center"
                                 FontSize="14"/>
                        
                        <Button x:Name="SearchButton" 
                                Grid.Column="1"
                                Content="搜索" 
                                Background="#4169E1"
                                Foreground="White"
                                Width="80"
                                Height="36"
                                BorderThickness="0"
                                Click="SearchButton_Click"
                                Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="0,18,18,0">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                         VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Border>
                
                <!-- 关闭按钮 -->
                <Button x:Name="CloseButton" 
                        Grid.Column="2"
                        Content="×" 
                        FontSize="22"
                        Foreground="#E0E0FF"
                        Background="Transparent"
                        BorderThickness="0"
                        Width="40"
                        Height="40"
                        Margin="0,0,10,0"
                        Click="CloseButton_Click"
                        Cursor="Hand"/>
            </Grid>
        </Border>
        
        <!-- 主内容区 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>  <!-- 左侧分类面板 -->
                <ColumnDefinition Width="*"/>     <!-- 右侧内容区 -->
            </Grid.ColumnDefinitions>
            
            <!-- 左侧分类面板 -->
            <Border Grid.Column="0" Background="#131330">
                <StackPanel Margin="0,20,0,0">
                    <TextBlock Text="知识分类" 
                               Foreground="#A0A0D0" 
                               FontSize="18" 
                               Margin="20,0,0,10"/>
                    
                    <!-- 全部分类按钮 -->
                    <Button x:Name="AllCategoryButton"
                            Content="全部知识"
                            Foreground="#E0E0FF"
                            FontSize="16"
                            Background="Transparent"
                            BorderThickness="0"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            Padding="20,12"
                            Margin="0,5"
                            Click="AllCategoryButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border" 
                                                    Background="{TemplateBinding Background}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    BorderBrush="{TemplateBinding BorderBrush}">
                                                <Grid>
                                                    <Rectangle x:Name="indicator" 
                                                              Width="4" 
                                                              HorizontalAlignment="Left" 
                                                              Fill="#4169E1" 
                                                              Visibility="Collapsed"/>
                                                    <ContentPresenter Margin="{TemplateBinding Padding}"/>
                                                </Grid>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#252550"/>
                                                </Trigger>
                                                <DataTrigger Binding="{Binding ElementName=CategoryList, Path=SelectedItem}" Value="{x:Null}">
                                                    <Setter TargetName="indicator" Property="Visibility" Value="Visible"/>
                                                    <Setter Property="Background" Value="#252550"/>
                                                </DataTrigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <!-- 分类列表 -->
                    <ListBox x:Name="CategoryList"
                             Background="Transparent"
                             BorderThickness="0"
                             Margin="0,5,0,0"
                             SelectionChanged="CategoryList_SelectionChanged">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="20,12"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border x:Name="border"
                                                    Background="{TemplateBinding Background}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    BorderBrush="{TemplateBinding BorderBrush}">
                                                <Grid>
                                                    <Rectangle x:Name="indicator" 
                                                              Width="4" 
                                                              HorizontalAlignment="Left" 
                                                              Fill="#4169E1" 
                                                              Visibility="Collapsed"/>
                                                    <ContentPresenter Margin="{TemplateBinding Padding}"/>
                                                </Grid>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#252550"/>
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="indicator" Property="Visibility" Value="Visible"/>
                                                    <Setter Property="Background" Value="#252550"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" 
                                           Foreground="#E0E0FF" 
                                           FontSize="16"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    
                    <!-- 收藏按钮 -->
                    <Button x:Name="FavoritesButton"
                            Content="我的收藏"
                            Foreground="#E0E0FF"
                            FontSize="16"
                            Background="Transparent"
                            BorderThickness="0"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            Padding="20,12"
                            Margin="0,5"
                            Click="FavoritesButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border" 
                                                    Background="{TemplateBinding Background}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    BorderBrush="{TemplateBinding BorderBrush}">
                                                <ContentPresenter Margin="{TemplateBinding Padding}"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#252550"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Border>
            
            <!-- 右侧内容区 -->
            <Border Grid.Column="1" Background="#1A1A2E">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>  <!-- 标题 -->
                        <RowDefinition Height="*"/>     <!-- 内容列表 -->
                    </Grid.RowDefinitions>
                    
                    <!-- 内容标题 -->
                    <TextBlock x:Name="ContentTitle"
                               Grid.Row="0"
                               Text="全部知识"
                               Foreground="#E0E0FF"
                               FontSize="20"
                               FontWeight="Bold"
                               Margin="20,20,0,15"/>
                    
                    <!-- 内容列表 -->
                    <ListView x:Name="KnowledgeListView"
                              Grid.Row="1"
                              Background="Transparent"
                              BorderThickness="0"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                              SelectionChanged="KnowledgeListView_SelectionChanged">
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" 
                                           ItemWidth="370" 
                                           ItemHeight="180"/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Margin" Value="10"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListViewItem">
                                            <Border x:Name="border"
                                                    Background="#252550"
                                                    CornerRadius="8"
                                                    BorderThickness="0">
                                                <ContentPresenter Margin="0"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="BorderThickness" Value="1"/>
                                                    <Setter TargetName="border" Property="BorderBrush" Value="#4169E1"/>
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                                                    <Setter TargetName="border" Property="BorderBrush" Value="#4169E1"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="15">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- 标题 -->
                                    <TextBlock Grid.Row="0"
                                               Text="{Binding Title}"
                                               Foreground="#E0E0FF"
                                               FontSize="16"
                                               FontWeight="Bold"
                                               TextWrapping="Wrap"/>
                                    
                                    <!-- 摘要 -->
                                    <TextBlock Grid.Row="1"
                                               Text="{Binding Summary}"
                                               Foreground="#B0B0D0"
                                               FontSize="14"
                                               TextWrapping="Wrap"
                                               Margin="0,8,0,0"/>
                                    
                                    <!-- 分类标签 -->
                                    <Border Grid.Row="2"
                                            Background="#4169E1"
                                            CornerRadius="4"
                                            Padding="8,4"
                                            HorizontalAlignment="Left"
                                            Margin="0,10,0,0">
                                        <TextBlock Text="{Binding Category}"
                                                   Foreground="White"
                                                   FontSize="12"/>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    
                    <!-- 详情面板（初始隐藏） -->
                    <Border x:Name="DetailPanel"
                            Grid.Row="0"
                            Grid.RowSpan="2"
                            Background="#1A1A2E"
                            Visibility="Collapsed">
                        <Grid Margin="20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- 返回按钮 -->
                            <Button x:Name="BackButton"
                                    Grid.Row="0"
                                    Content="返回列表"
                                    HorizontalAlignment="Left"
                                    Foreground="#A0A0D0"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Margin="0,0,0,20"
                                    Click="BackButton_Click"
                                    Cursor="Hand"/>
                            
                            <!-- 标题 -->
                            <TextBlock x:Name="DetailTitle"
                                       Grid.Row="1"
                                       Foreground="#E0E0FF"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,10"/>
                            
                            <!-- 分类和收藏 -->
                            <Grid Grid.Row="2" Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- 分类 -->
                                <Border Grid.Column="0"
                                        Background="#4169E1"
                                        CornerRadius="4"
                                        Padding="8,4">
                                    <TextBlock x:Name="DetailCategory"
                                               Foreground="White"
                                               FontSize="14"/>
                                </Border>
                                
                                <!-- 收藏按钮 -->
                                <Button x:Name="FavoriteButton"
                                        Grid.Column="2"
                                        Content="收藏"
                                        Background="#252550"
                                        Foreground="#E0E0FF"
                                        Padding="12,6"
                                        Click="FavoriteButton_Click"
                                        Cursor="Hand">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="4"
                                                    Padding="{TemplateBinding Padding}">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock x:Name="favoriteIcon" 
                                                               Text="★" 
                                                               Foreground="#FFD700" 
                                                               Margin="0,0,5,0"
                                                               Visibility="Collapsed"/>
                                                    <TextBlock Text="{TemplateBinding Content}" 
                                                               Foreground="{TemplateBinding Foreground}"/>
                                                </StackPanel>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=DetailPanel, Path=Tag}" Value="True">
                                                    <Setter TargetName="favoriteIcon" Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Grid>
                            
                            <!-- 内容 -->
                            <ScrollViewer Grid.Row="3"
                                          VerticalScrollBarVisibility="Auto"
                                          HorizontalScrollBarVisibility="Disabled">
                                <TextBlock x:Name="DetailContent"
                                           Foreground="#D0D0F0"
                                           FontSize="16"
                                           TextWrapping="Wrap"
                                           LineHeight="24"/>
                            </ScrollViewer>
                            
                            <!-- 标签列表 -->
                            <ItemsControl x:Name="TagsPanel"
                                          Grid.Row="4"
                                          Margin="0,20,0,0">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#252550"
                                                CornerRadius="4"
                                                Padding="8,4"
                                                Margin="0,0,8,8">
                                            <TextBlock Text="{Binding}"
                                                       Foreground="#B0B0D0"
                                                       FontSize="14"/>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window> 