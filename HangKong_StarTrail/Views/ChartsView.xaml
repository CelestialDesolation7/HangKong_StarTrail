<Window x:Class="HangKong_StarTrail.Views.ChartsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        mc:Ignorable="d"
        Title="仿真图表" Height="800" Width="1200" WindowStartupLocation="CenterScreen" FontFamily="Microsoft YaHei">
    <Window.Resources>
        <LinearGradientBrush x:Key="MainBgBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#3B2158" Offset="0"/>
            <GradientStop Color="#6E5FBE" Offset="1"/>
        </LinearGradientBrush>
        <Style x:Key="MainButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4169E1"/>
            <Setter Property="Foreground" Value="#F0F0F0"/>
            <Setter Property="FontFamily" Value="Microsoft YaHei"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#6E5FBE"/>
                                <Setter Property="Foreground" Value="#FFFFFF"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="15" Color="#9F5FFF" Opacity="0.8"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Background="{StaticResource MainBgBrush}">
        <!-- 顶部标题栏和返回按钮 -->
        <Grid Margin="30,30,30,0" VerticalAlignment="Top" Height="80">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Content="返回" Style="{StaticResource MainButtonStyle}" Width="90" Height="40" Click="OnBackClick"/>
            <TextBlock Grid.Column="1" Text="仿真图表" FontSize="36" FontWeight="Bold" Foreground="#FFF" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0">
                <TextBlock.Effect>
                    <DropShadowEffect ShadowDepth="3" Direction="315" Color="#000000" BlurRadius="8" Opacity="0.7"/>
                </TextBlock.Effect>
            </TextBlock>
        </Grid>
        <!-- 半透明圆角面板包裹图表 -->
        <Border CornerRadius="20" Background="#F8F8FFCC" Margin="60,120,60,40" Padding="30">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <!-- 速度-时间曲线图 -->
                <lvc:CartesianChart x:Name="VelocityTimeChart" Grid.Row="0" Grid.Column="0" Margin="15"/>
                <!-- 合力-时间曲线图 -->
                <lvc:CartesianChart x:Name="ForceTimeChart" Grid.Row="0" Grid.Column="1" Margin="15"/>
                <!-- Δv统计图 -->
                <lvc:CartesianChart x:Name="DeltaVChart" Grid.Row="1" Grid.Column="0" Margin="15"/>
                <!-- 所有天体速度对比图（RaceChart） -->
                <lvc:CartesianChart x:Name="AllVelocityRaceChart" Grid.Row="1" Grid.Column="1" Margin="15"/>
            </Grid>
        </Border>
    </Grid>
</Window>