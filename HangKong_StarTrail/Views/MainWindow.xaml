<Window x:Class="HangKong_StarTrail.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HangKong_StarTrail.Views"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:fontAwesome="clr-namespace:FontAwesome.WPF;assembly=FontAwesome.WPF"
        mc:Ignorable="d"
        Title="星穹轨道 —— 恒星运行与宇宙知识可视化系统" 
        Height="720" Width="1280" 
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None" 
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <Style x:Key="MainButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4169E1"/>
            <Setter Property="Foreground" Value="#F0F0F0"/>
            <Setter Property="FontFamily" Value="Microsoft YaHei"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#6E5FBE"/>
                                <Setter Property="Foreground" Value="#FFFFFF"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="15" Color="#9F5FFF" Opacity="0.8"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 与GravitySimulationForm一致的图标按钮样式 -->
        <Style x:Key="IconTextButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#33FFFFFF"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="10" Color="#9F5FFF" Opacity="0.6"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#66FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#88FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#33FFFFFF"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="10" Color="#9F5FFF" Opacity="0.6"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="10" BorderBrush="Gray" BorderThickness="2" MouseLeftButtonDown="TitleBar_MouseDown">
        <Border.Background>
            <SolidColorBrush Color="#FF2D2D30"/>
        </Border.Background>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 标题栏 -->
            <Grid Grid.Row="0" Background="#1F1E33" MouseDown="TitleBar_MouseDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="星穹轨道" Foreground="#F0F0F0" FontSize="14" Margin="10,5,0,0" VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="MinimizeButton" Click="MinimizeButton_Click" Style="{StaticResource IconButtonStyle}">
                        <fontAwesome:FontAwesome Icon="Minus" Foreground="#F0F0F0" FontSize="14"/>
                    </Button>
                    <Button x:Name="CloseButton" Click="CloseButton_Click" Style="{StaticResource IconButtonStyle}">
                        <fontAwesome:FontAwesome Icon="Close" Foreground="#F0F0F0" FontSize="14"/>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- 主内容区 -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/> <!-- 左侧操作面板 -->
                    <ColumnDefinition Width="5"/> <!-- 分隔线 -->
                    <ColumnDefinition Width="*"/> <!-- 右侧主内容区 -->
                </Grid.ColumnDefinitions>

                <!-- 左侧操作面板 -->
                <Border Grid.Column="0" Padding="15">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#343155" Offset="0"/>
                            <GradientStop Color="#3B2158" Offset="1"/>
                    </LinearGradientBrush>
                    </Border.Background>
                    <Grid>
                <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                        <!-- 面板标题 -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,20">
                            <fa:ImageAwesome Icon="Rocket" Foreground="White" Height="30" Margin="0,0,10,0"/>
                            <TextBlock Text="星际探索" Foreground="White" FontSize="24" FontWeight="Bold"/>
                        </StackPanel>

                        <!-- 功能按钮区 -->
                        <StackPanel Grid.Row="1" Margin="10,20,10,10">
                            <Button Content="启动探索之旅" Style="{StaticResource MainButtonStyle}" Click="StartExploration_Click" Margin="0,0,0,0">
                                <Button.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#3E3A65" Offset="0"/>
                                        <GradientStop Color="#6E5FBE" Offset="1"/>
                                    </LinearGradientBrush>
                                </Button.Background>
                                <Button.Effect>
                                    <DropShadowEffect ShadowDepth="0" BlurRadius="15" Color="#6E5FBE" Opacity="0.5"/>
                                </Button.Effect>
                                <Button.ContentTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <fontAwesome:FontAwesome Icon="Rocket" Margin="0,0,10,0"/>
                                            <TextBlock Text="{Binding}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </Button.ContentTemplate>
                                <Button.Triggers>
                                    <EventTrigger RoutedEvent="Button.Loaded">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:1"/>
                                                <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,-10,0,0" To="0,0,0,0" Duration="0:0:0.5"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Button.Triggers>
                            </Button>
                            
                            <Button Content="学习宇宙知识" Style="{StaticResource MainButtonStyle}" Click="StartLearning_Click" Margin="0,20,0,0">
                                <Button.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#3B2F56" Offset="0"/>
                                        <GradientStop Color="#5A4887" Offset="1"/>
                                    </LinearGradientBrush>
                                </Button.Background>
                                <Button.Effect>
                                    <DropShadowEffect ShadowDepth="0" BlurRadius="15" Color="#5A4887" Opacity="0.5"/>
                                </Button.Effect>
                                <Button.ContentTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <fontAwesome:FontAwesome Icon="Book" Margin="0,0,10,0"/>
                                            <TextBlock Text="{Binding}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </Button.ContentTemplate>
                                <Button.Triggers>
                                    <EventTrigger RoutedEvent="Button.Loaded">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:1" BeginTime="0:0:0.2"/>
                                                <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,10,0,0" To="0,20,0,0" Duration="0:0:0.5" BeginTime="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Button.Triggers>
                            </Button>
                            
                            <!-- 星际智者按钮 -->
                            <Button Content="星际智者" Style="{StaticResource MainButtonStyle}" Click="OpenAIChat_Click" Margin="0,20,0,0">
                                <Button.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#3B2F56" Offset="0"/>
                                        <GradientStop Color="#5A4887" Offset="1"/>
                                    </LinearGradientBrush>
                                </Button.Background>
                                <Button.Effect>
                                    <DropShadowEffect ShadowDepth="0" BlurRadius="15" Color="#5A4887" Opacity="0.5"/>
                                </Button.Effect>
                                <Button.ContentTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <fontAwesome:FontAwesome Icon="Comments" Margin="0,0,10,0"/>
                                            <TextBlock Text="{Binding}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </Button.ContentTemplate>
                                <Button.Triggers>
                                    <EventTrigger RoutedEvent="Button.Loaded">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:1" BeginTime="0:0:0.2"/>
                                                <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,10,0,0" To="0,20,0,0" Duration="0:0:0.5" BeginTime="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Button.Triggers>
                            </Button>
                            
                            <Button Content="退出系统" Style="{StaticResource MainButtonStyle}" Click="Exit_Click" Margin="0,20,0,0">
                                <Button.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#473765" Offset="0"/>
                                        <GradientStop Color="#7E5BBE" Offset="1"/>
                                    </LinearGradientBrush>
                                </Button.Background>
                                <Button.Effect>
                                    <DropShadowEffect ShadowDepth="0" BlurRadius="15" Color="#7E5BBE" Opacity="0.5"/>
                                </Button.Effect>
                                <Button.ContentTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <fontAwesome:FontAwesome Icon="SignOut" Margin="0,0,10,0"/>
                                            <TextBlock Text="{Binding}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </Button.ContentTemplate>
                                <Button.Triggers>
                                    <EventTrigger RoutedEvent="Button.Loaded">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:1" BeginTime="0:0:0.4"/>
                                                <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,10,0,0" To="0,20,0,0" Duration="0:0:0.5" BeginTime="0:0:0.4"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Button.Triggers>
                            </Button>
                        </StackPanel>

                        <!-- 底部信息 -->
                        <StackPanel Grid.Row="2" Margin="10,0,10,20">
                            <Border BorderThickness="0,1,0,0" BorderBrush="#3F3D5C" Margin="0,0,0,10"/>
                            <TextBlock Text="© 2025 星穹轨道团队" Foreground="#A0A0A0" FontSize="12" TextAlignment="Center"/>
                            <TextBlock Text="版本 1.0.0" Foreground="#A0A0A0" FontSize="12" TextAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- 中间分隔线 -->
                <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="#222"/>

                <!-- 右侧主内容区 -->
                <Border Grid.Column="2">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#1F1D42" Offset="0"/>
                            <GradientStop Color="#251A48" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid>
                        <!-- 宇宙背景星空效果（增强版） -->
                <Canvas>
                            <!-- 改进的星云效果 - 多层次星云 -->
                            <Ellipse Canvas.Left="-150" Canvas.Top="50" Width="800" Height="600" Opacity="0.18">
                                <Ellipse.Fill>
                                    <RadialGradientBrush>
                                        <GradientStop Color="#9F5FFF" Offset="0"/>
                                        <GradientStop Color="#6A42B8" Offset="0.3"/>
                                        <GradientStop Color="Transparent" Offset="1"/>
                                    </RadialGradientBrush>
                                </Ellipse.Fill>
                                <Ellipse.Effect>
                                    <BlurEffect Radius="30"/>
                                </Ellipse.Effect>
                                <Ellipse.RenderTransform>
                                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                                </Ellipse.RenderTransform>
                                <Ellipse.Triggers>
                                    <EventTrigger RoutedEvent="Ellipse.Loaded">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" 
                                                                From="1" To="1.05" Duration="0:0:15" 
                                                                AutoReverse="True" RepeatBehavior="Forever"/>
                                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" 
                                                                From="1" To="1.05" Duration="0:0:15" 
                                                                AutoReverse="True" RepeatBehavior="Forever"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Ellipse.Triggers>
                            </Ellipse>
                    
                            <Ellipse Canvas.Left="300" Canvas.Top="100" Width="750" Height="450" Opacity="0.15">
                        <Ellipse.Fill>
                            <RadialGradientBrush>
                                        <GradientStop Color="#5F9FFF" Offset="0"/>
                                        <GradientStop Color="#3A55AA" Offset="0.4"/>
                                <GradientStop Color="Transparent" Offset="1"/>
                            </RadialGradientBrush>
                        </Ellipse.Fill>
                                <Ellipse.Effect>
                                    <BlurEffect Radius="25"/>
                                </Ellipse.Effect>
                                <Ellipse.RenderTransform>
                                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                                </Ellipse.RenderTransform>
                                <Ellipse.Triggers>
                                    <EventTrigger RoutedEvent="Ellipse.Loaded">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" 
                                                                From="1" To="1.03" Duration="0:0:20" BeginTime="0:0:2"
                                                                AutoReverse="True" RepeatBehavior="Forever"/>
                                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" 
                                                                From="1" To="1.03" Duration="0:0:20" BeginTime="0:0:2"
                                                                AutoReverse="True" RepeatBehavior="Forever"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Ellipse.Triggers>
                    </Ellipse>
                    
                            <!-- 额外的小型星云 -->
                            <Ellipse Canvas.Left="50" Canvas.Top="350" Width="250" Height="150" Opacity="0.12">
                        <Ellipse.Fill>
                            <RadialGradientBrush>
                                        <GradientStop Color="#FF9FDF" Offset="0"/>
                                <GradientStop Color="Transparent" Offset="1"/>
                            </RadialGradientBrush>
                        </Ellipse.Fill>
                                <Ellipse.Effect>
                                    <BlurEffect Radius="15"/>
                                </Ellipse.Effect>
                            </Ellipse>
                            
                            <!-- 宇宙尘埃效果 -->
                            <Rectangle Width="970" Height="670" Opacity="0.3">
                                <Rectangle.Fill>
                                    <ImageBrush ImageSource="/HangKong_StarTrail;component/StyleResources/Images/planets/sun_texture.jpg" 
                                                Opacity="0.1" Stretch="UniformToFill"/>
                                </Rectangle.Fill>
                            </Rectangle>
                            
                            <!-- 小星星点缀（改进的分布） -->
                            <!-- 第一组星星 - 较大且明亮 -->
                            <Ellipse Canvas.Left="100" Canvas.Top="50" Width="2.5" Height="2.5" Fill="#FFFFFF" Opacity="0.9"/>
                            <Ellipse Canvas.Left="240" Canvas.Top="120" Width="3" Height="3" Fill="#FFFFFF" Opacity="0.95"/>
                            <Ellipse Canvas.Left="500" Canvas.Top="80" Width="3" Height="3" Fill="#FFFFFF" Opacity="0.95"/>
                            <Ellipse Canvas.Left="720" Canvas.Top="160" Width="2.5" Height="2.5" Fill="#FFFFFF" Opacity="0.9"/>
                            <Ellipse Canvas.Left="620" Canvas.Top="370" Width="3" Height="3" Fill="#FFFFFF" Opacity="0.95"/>
                            <Ellipse Canvas.Left="380" Canvas.Top="420" Width="2.5" Height="2.5" Fill="#FFFFFF" Opacity="0.9"/>
                            <Ellipse Canvas.Left="180" Canvas.Top="400" Width="2.5" Height="2.5" Fill="#FFFFFF" Opacity="0.9"/>
                            <Ellipse Canvas.Left="800" Canvas.Top="250" Width="3" Height="3" Fill="#FFFFFF" Opacity="0.95"/>
                            
                            <!-- 第二组星星 - 中等大小 -->
                            <Ellipse Canvas.Left="170" Canvas.Top="100" Width="2" Height="2" Fill="#FFFFFF" Opacity="0.8"/>
                            <Ellipse Canvas.Left="320" Canvas.Top="80" Width="2" Height="2" Fill="#FFFFFF" Opacity="0.8"/>
                            <Ellipse Canvas.Left="420" Canvas.Top="130" Width="2" Height="2" Fill="#FFFFFF" Opacity="0.8"/>
                            <Ellipse Canvas.Left="630" Canvas.Top="100" Width="2" Height="2" Fill="#FFFFFF" Opacity="0.8"/>
                            <Ellipse Canvas.Left="520" Canvas.Top="300" Width="2" Height="2" Fill="#FFFFFF" Opacity="0.8"/>
                            <Ellipse Canvas.Left="280" Canvas.Top="350" Width="2" Height="2" Fill="#FFFFFF" Opacity="0.8"/>
                            <Ellipse Canvas.Left="460" Canvas.Top="450" Width="2" Height="2" Fill="#FFFFFF" Opacity="0.8"/>
                            <Ellipse Canvas.Left="750" Canvas.Top="380" Width="2" Height="2" Fill="#FFFFFF" Opacity="0.8"/>
                            
                            <!-- 第三组星星 - 最小且最暗 -->
                            <Ellipse Canvas.Left="120" Canvas.Top="150" Width="1" Height="1" Fill="#FFFFFF" Opacity="0.7"/>
                            <Ellipse Canvas.Left="230" Canvas.Top="200" Width="1" Height="1" Fill="#FFFFFF" Opacity="0.7"/>
                            <Ellipse Canvas.Left="350" Canvas.Top="150" Width="1" Height="1" Fill="#FFFFFF" Opacity="0.7"/>
                            <Ellipse Canvas.Left="450" Canvas.Top="250" Width="1" Height="1" Fill="#FFFFFF" Opacity="0.7"/>
                            <Ellipse Canvas.Left="580" Canvas.Top="180" Width="1" Height="1" Fill="#FFFFFF" Opacity="0.7"/>
                            <Ellipse Canvas.Left="650" Canvas.Top="220" Width="1" Height="1" Fill="#FFFFFF" Opacity="0.7"/>
                            <Ellipse Canvas.Left="350" Canvas.Top="280" Width="1" Height="1" Fill="#FFFFFF" Opacity="0.7"/>
                            <Ellipse Canvas.Left="430" Canvas.Top="320" Width="1" Height="1" Fill="#FFFFFF" Opacity="0.7"/>
                            <Ellipse Canvas.Left="540" Canvas.Top="390" Width="1" Height="1" Fill="#FFFFFF" Opacity="0.7"/>
                            <Ellipse Canvas.Left="600" Canvas.Top="430" Width="1" Height="1" Fill="#FFFFFF" Opacity="0.7"/>
                            <Ellipse Canvas.Left="680" Canvas.Top="300" Width="1" Height="1" Fill="#FFFFFF" Opacity="0.7"/>
                            <Ellipse Canvas.Left="750" Canvas.Top="330" Width="1" Height="1" Fill="#FFFFFF" Opacity="0.7"/>
                            <Ellipse Canvas.Left="800" Canvas.Top="410" Width="1" Height="1" Fill="#FFFFFF" Opacity="0.7"/>
                            <Ellipse Canvas.Left="140" Canvas.Top="320" Width="1" Height="1" Fill="#FFFFFF" Opacity="0.7"/>
                            <Ellipse Canvas.Left="220" Canvas.Top="280" Width="1" Height="1" Fill="#FFFFFF" Opacity="0.7"/>
                            <Ellipse Canvas.Left="270" Canvas.Top="420" Width="1" Height="1" Fill="#FFFFFF" Opacity="0.7"/>
                            
                            <!-- 高亮闪烁星 - 更多变化和随机效果 -->
                            <Ellipse Canvas.Left="180" Canvas.Top="120" Width="3.5" Height="3.5" Fill="#FFFFFF">
                                <Ellipse.Effect>
                                    <DropShadowEffect ShadowDepth="0" BlurRadius="6" Color="White" Opacity="0.8"/>
                                </Ellipse.Effect>
                                <Ellipse.Triggers>
                                    <EventTrigger RoutedEvent="Ellipse.Loaded">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0.3" Duration="0:0:2" AutoReverse="True" RepeatBehavior="Forever"/>
                                                <DoubleAnimation Storyboard.TargetProperty="Effect.Opacity" From="0.8" To="0.3" Duration="0:0:2" AutoReverse="True" RepeatBehavior="Forever"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Ellipse.Triggers>
                            </Ellipse>
                            
                            <Ellipse Canvas.Left="420" Canvas.Top="230" Width="4" Height="4" Fill="#FFFFFF">
                                <Ellipse.Effect>
                                    <DropShadowEffect ShadowDepth="0" BlurRadius="8" Color="#B0E0FF" Opacity="0.9"/>
                                </Ellipse.Effect>
                                <Ellipse.Triggers>
                                    <EventTrigger RoutedEvent="Ellipse.Loaded">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0.2" Duration="0:0:3" AutoReverse="True" RepeatBehavior="Forever"/>
                                                <DoubleAnimation Storyboard.TargetProperty="Effect.BlurRadius" From="8" To="4" Duration="0:0:3" AutoReverse="True" RepeatBehavior="Forever"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Ellipse.Triggers>
                            </Ellipse>
                            
                            <Ellipse Canvas.Left="620" Canvas.Top="180" Width="3.5" Height="3.5" Fill="#FFFFFF">
                                <Ellipse.Effect>
                                    <DropShadowEffect ShadowDepth="0" BlurRadius="7" Color="#FFE0B0" Opacity="0.8"/>
                                </Ellipse.Effect>
                                <Ellipse.Triggers>
                                    <EventTrigger RoutedEvent="Ellipse.Loaded">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0.4" Duration="0:0:2.5" AutoReverse="True" RepeatBehavior="Forever"/>
                                                <DoubleAnimation Storyboard.TargetProperty="Effect.BlurRadius" From="7" To="3" Duration="0:0:2.5" AutoReverse="True" RepeatBehavior="Forever"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Ellipse.Triggers>
                            </Ellipse>
                            
                            <Ellipse Canvas.Left="300" Canvas.Top="350" Width="3" Height="3" Fill="#FFFFFF">
                                <Ellipse.Effect>
