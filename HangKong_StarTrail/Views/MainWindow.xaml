<Window x:Class="HangKong_StarTrail.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HangKong_StarTrail.Views"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:fontAwesome="clr-namespace:FontAwesome.WPF;assembly=FontAwesome.WPF"
        mc:Ignorable="d"
        Title="星穹轨道 —— 恒星运行与宇宙知识可视化系统" 
        Height="720" Width="1280" 
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None" 
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <Style x:Key="MainButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4169E1"/>
            <Setter Property="Foreground" Value="#F0F0F0"/>
            <Setter Property="FontFamily" Value="Microsoft YaHei"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFD700"/>
                                <Setter Property="Foreground" Value="#0B0E17"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#33FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="10">
        <Border.Background>
            <SolidColorBrush Color="#292841"/> <!-- 深紫色背景，与模拟界面一致 -->
        </Border.Background>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 标题栏 -->
            <Grid Grid.Row="0" Background="#1F1E33" MouseDown="TitleBar_MouseDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="星穹轨道" Foreground="#F0F0F0" FontSize="14" Margin="10,5,0,0" VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="MinimizeButton" Click="MinimizeButton_Click" Style="{StaticResource IconButtonStyle}">
                        <fontAwesome:FontAwesome Icon="WindowMinimize" Foreground="#F0F0F0" FontSize="14"/>
                    </Button>
                    <Button x:Name="CloseButton" Click="CloseButton_Click" Style="{StaticResource IconButtonStyle}">
                        <fontAwesome:FontAwesome Icon="Close" Foreground="#F0F0F0" FontSize="14"/>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- 主内容区 -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/> <!-- 左侧操作面板 -->
                    <ColumnDefinition Width="*"/> <!-- 右侧主内容区 -->
                </Grid.ColumnDefinitions>

                <!-- 左侧操作面板 -->
                <Border Grid.Column="0" Background="#232238" BorderThickness="0,0,1,0" BorderBrush="#3F3D5C">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- 面板标题 -->
                        <TextBlock Grid.Row="0" Text="操作面板" Foreground="White" FontSize="18" 
                                   FontWeight="Bold" Margin="20,20,0,20" HorizontalAlignment="Left"/>

                        <!-- 功能按钮区 -->
                        <StackPanel Grid.Row="1" Margin="10,10,10,10">
                            <Button Content="启动探索之旅" Style="{StaticResource MainButtonStyle}" Click="StartExploration_Click">
                                <Button.ContentTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <fontAwesome:FontAwesome Icon="Rocket" Margin="0,0,10,0"/>
                                            <TextBlock Text="{Binding}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </Button.ContentTemplate>
                            </Button>
                            
                            <Button Content="载入已有场景" Style="{StaticResource MainButtonStyle}" Click="LoadScene_Click" Margin="0,10,0,0">
                                <Button.ContentTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <fontAwesome:FontAwesome Icon="FolderOpen" Margin="0,0,10,0"/>
                                            <TextBlock Text="{Binding}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </Button.ContentTemplate>
                            </Button>
                            
                            <Button Content="学习宇宙知识" Style="{StaticResource MainButtonStyle}" Click="StartLearning_Click" Margin="0,10,0,0">
                                <Button.ContentTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <fontAwesome:FontAwesome Icon="Book" Margin="0,0,10,0"/>
                                            <TextBlock Text="{Binding}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </Button.ContentTemplate>
                            </Button>
                            
                            <Button Content="系统设置" Style="{StaticResource MainButtonStyle}" Click="OpenSettings_Click" Margin="0,10,0,0">
                                <Button.ContentTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <fontAwesome:FontAwesome Icon="Cog" Margin="0,0,10,0"/>
                                            <TextBlock Text="{Binding}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </Button.ContentTemplate>
                            </Button>
                            
                            <Button Content="退出系统" Style="{StaticResource MainButtonStyle}" Click="Exit_Click" Margin="0,10,0,0">
                                <Button.ContentTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <fontAwesome:FontAwesome Icon="SignOut" Margin="0,0,10,0"/>
                                            <TextBlock Text="{Binding}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </Button.ContentTemplate>
                            </Button>
                        </StackPanel>

                        <!-- 底部信息 -->
                        <StackPanel Grid.Row="2" Margin="10,0,10,20">
                            <Border BorderThickness="0,1,0,0" BorderBrush="#3F3D5C" Margin="0,0,0,10"/>
                            <TextBlock Text="© 2025 星穹轨道团队" Foreground="#A0A0A0" FontSize="12" TextAlignment="Center"/>
                            <TextBlock Text="版本 1.0.0" Foreground="#A0A0A0" FontSize="12" TextAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- 右侧主内容区 -->
                <Grid Grid.Column="1">
                    <!-- 星星背景效果 -->
                    <Canvas>
                        <!-- 小星星点缀 -->
                        <Ellipse Canvas.Left="100" Canvas.Top="50" Width="2" Height="2" Fill="#FFFFFF" Opacity="0.8"/>
                        <Ellipse Canvas.Left="200" Canvas.Top="150" Width="1" Height="1" Fill="#FFFFFF" Opacity="0.7"/>
                        <Ellipse Canvas.Left="300" Canvas.Top="80" Width="3" Height="3" Fill="#FFFFFF" Opacity="0.9"/>
                        <Ellipse Canvas.Left="500" Canvas.Top="200" Width="2" Height="2" Fill="#FFFFFF" Opacity="0.8"/>
                        <Ellipse Canvas.Left="700" Canvas.Top="100" Width="1" Height="1" Fill="#FFFFFF" Opacity="0.7"/>
                        <Ellipse Canvas.Left="400" Canvas.Top="250" Width="2" Height="2" Fill="#FFFFFF" Opacity="0.8"/>
                        <Ellipse Canvas.Left="600" Canvas.Top="80" Width="3" Height="3" Fill="#FFFFFF" Opacity="0.9"/>
                        <Ellipse Canvas.Left="150" Canvas.Top="300" Width="1" Height="1" Fill="#FFFFFF" Opacity="0.6"/>
                        <Ellipse Canvas.Left="350" Canvas.Top="350" Width="2" Height="2" Fill="#FFFFFF" Opacity="0.8"/>
                        <Ellipse Canvas.Left="550" Canvas.Top="400" Width="1" Height="1" Fill="#FFFFFF" Opacity="0.7"/>
                        <Ellipse Canvas.Left="250" Canvas.Top="300" Width="2" Height="2" Fill="#FFFFFF" Opacity="0.9"/>
                        <Ellipse Canvas.Left="450" Canvas.Top="450" Width="1" Height="1" Fill="#FFFFFF" Opacity="0.7"/>
                        <Ellipse Canvas.Left="650" Canvas.Top="350" Width="2" Height="2" Fill="#FFFFFF" Opacity="0.8"/>
                        
                        <!-- 星云效果 -->
                        <Ellipse Canvas.Left="200" Canvas.Top="150" Width="400" Height="200" Opacity="0.1">
                            <Ellipse.Fill>
                                <RadialGradientBrush>
                                    <GradientStop Color="#4169E1" Offset="0"/>
                                    <GradientStop Color="Transparent" Offset="1"/>
                                </RadialGradientBrush>
                            </Ellipse.Fill>
                        </Ellipse>
                    </Canvas>

                    <!-- 主标题 -->
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="星穹轨道" FontFamily="Microsoft YaHei" FontSize="60" Foreground="#FFD700" FontWeight="Bold" 
                                   TextAlignment="Center" Margin="0,0,0,10">
                            <TextBlock.Effect>
                                <DropShadowEffect ShadowDepth="3" Direction="315" Color="#000000" BlurRadius="4" Opacity="0.8"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBlock Text="恒星运行与宇宙知识可视化系统" FontFamily="Microsoft YaHei" FontSize="24" Foreground="#F0F0F0" 
                                   TextAlignment="Center" Margin="0,0,0,40">
                            <TextBlock.Effect>
                                <DropShadowEffect ShadowDepth="2" Direction="315" Color="#000000" BlurRadius="3" Opacity="0.7"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        
                        <TextBlock Text="点击左侧按钮开始您的宇宙探索之旅" FontFamily="Microsoft YaHei" FontSize="18" Foreground="#A0A0A0" 
                                   TextAlignment="Center" Margin="0,20,0,0"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
