<Window x:Class="HangKong_StarTrail.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HangKong_StarTrail.Views"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:fontAwesome="clr-namespace:FontAwesome.WPF;assembly=FontAwesome.WPF"
        mc:Ignorable="d"
        Title="星穹轨道 —— 恒星运行与宇宙知识可视化系统" 
        Height="720" Width="1280" 
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None" 
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <Style x:Key="MainButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4169E1"/>
            <Setter Property="Foreground" Value="#F0F0F0"/>
            <Setter Property="FontFamily" Value="Microsoft YaHei"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#6E5FBE"/>
                                <Setter Property="Foreground" Value="#FFFFFF"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="15" Color="#9F5FFF" Opacity="0.8"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 与GravitySimulationForm一致的图标按钮样式 -->
        <Style x:Key="IconTextButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#33FFFFFF"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="10" Color="#9F5FFF" Opacity="0.6"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#66FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#88FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#33FFFFFF"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="10" Color="#9F5FFF" Opacity="0.6"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="10" BorderBrush="Gray" BorderThickness="2" MouseLeftButtonDown="TitleBar_MouseDown">
        <Border.Background>
            <SolidColorBrush Color="#FF2D2D30"/>
        </Border.Background>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 标题栏 -->
            <Grid Grid.Row="0" Background="#1F1E33" MouseDown="TitleBar_MouseDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="星穹轨道" Foreground="#F0F0F0" FontSize="14" Margin="10,5,0,0" VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="MinimizeButton" Click="MinimizeButton_Click" Style="{StaticResource IconButtonStyle}">
                        <fontAwesome:FontAwesome Icon="WindowMinimize" Foreground="#F0F0F0" FontSize="14"/>
                    </Button>
                    <Button x:Name="CloseButton" Click="CloseButton_Click" Style="{StaticResource IconButtonStyle}">
                        <fontAwesome:FontAwesome Icon="Close" Foreground="#F0F0F0" FontSize="14"/>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- 主内容区 -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/> <!-- 左侧操作面板 -->
                    <ColumnDefinition Width="5"/> <!-- 分隔线 -->
                    <ColumnDefinition Width="*"/> <!-- 右侧主内容区 -->
                </Grid.ColumnDefinitions>

                <!-- 左侧操作面板 -->
                <Border Grid.Column="0" Padding="15">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#343155" Offset="0"/>
                            <GradientStop Color="#3B2158" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- 面板标题 -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,20">
                            <fa:ImageAwesome Icon="Rocket" Foreground="White" Height="30" Margin="0,0,10,0"/>
                            <TextBlock Text="星际探索" Foreground="White" FontSize="24" FontWeight="Bold"/>
                        </StackPanel>

                        <!-- 功能按钮区 -->
                        <StackPanel Grid.Row="1" Margin="10,20,10,10">
                            <Button Content="启动探索之旅" Style="{StaticResource MainButtonStyle}" Click="StartExploration_Click" Margin="0,0,0,0">
                                <Button.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#3E3A65" Offset="0"/>
                                        <GradientStop Color="#6E5FBE" Offset="1"/>
                                    </LinearGradientBrush>
                                </Button.Background>
                                <Button.Effect>
                                    <DropShadowEffect ShadowDepth="0" BlurRadius="15" Color="#6E5FBE" Opacity="0.5"/>
                                </Button.Effect>
                                <Button.ContentTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <fontAwesome:FontAwesome Icon="Rocket" Margin="0,0,10,0"/>
                                            <TextBlock Text="{Binding}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </Button.ContentTemplate>
                                <Button.Triggers>
                                    <EventTrigger RoutedEvent="Button.Loaded">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:1"/>
                                                <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,-10,0,0" To="0,0,0,0" Duration="0:0:0.5"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Button.Triggers>
                            </Button>
                            
                            <Button Content="学习宇宙知识" Style="{StaticResource MainButtonStyle}" Click="StartLearning_Click" Margin="0,20,0,0">
                                <Button.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#3B2F56" Offset="0"/>
                                        <GradientStop Color="#5A4887" Offset="1"/>
                                    </LinearGradientBrush>
                                </Button.Background>
                                <Button.Effect>
                                    <DropShadowEffect ShadowDepth="0" BlurRadius="15" Color="#5A4887" Opacity="0.5"/>
                                </Button.Effect>
                                <Button.ContentTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <fontAwesome:FontAwesome Icon="Book" Margin="0,0,10,0"/>
                                            <TextBlock Text="{Binding}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </Button.ContentTemplate>
                                <Button.Triggers>
                                    <EventTrigger RoutedEvent="Button.Loaded">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:1" BeginTime="0:0:0.2"/>
                                                <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,10,0,0" To="0,20,0,0" Duration="0:0:0.5" BeginTime="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Button.Triggers>
                            </Button>
                            
                            <Button Content="退出系统" Style="{StaticResource MainButtonStyle}" Click="Exit_Click" Margin="0,20,0,0">
                                <Button.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#473765" Offset="0"/>
                                        <GradientStop Color="#7E5BBE" Offset="1"/>
                                    </LinearGradientBrush>
                                </Button.Background>
                                <Button.Effect>
                                    <DropShadowEffect ShadowDepth="0" BlurRadius="15" Color="#7E5BBE" Opacity="0.5"/>
                                </Button.Effect>
                                <Button.ContentTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <fontAwesome:FontAwesome Icon="SignOut" Margin="0,0,10,0"/>
                                            <TextBlock Text="{Binding}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </Button.ContentTemplate>
                                <Button.Triggers>
                                    <EventTrigger RoutedEvent="Button.Loaded">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:1" BeginTime="0:0:0.4"/>
                                                <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,10,0,0" To="0,20,0,0" Duration="0:0:0.5" BeginTime="0:0:0.4"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Button.Triggers>
                            </Button>
                        </StackPanel>

                        <!-- 底部信息 -->
                        <StackPanel Grid.Row="2" Margin="10,0,10,20">
                            <Border BorderThickness="0,1,0,0" BorderBrush="#3F3D5C" Margin="0,0,0,10"/>
                            <TextBlock Text="© 2025 星穹轨道团队" Foreground="#A0A0A0" FontSize="12" TextAlignment="Center"/>
                            <TextBlock Text="版本 1.0.0" Foreground="#A0A0A0" FontSize="12" TextAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- 中间分隔线 -->
                <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="#222"/>

                <!-- 右侧主内容区 -->
                <Border Grid.Column="2">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#3E3A65" Offset="0"/>
                            <GradientStop Color="#473765" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid>
                        <!-- 动态行星系统 -->
                        <Canvas ClipToBounds="True">
                            <!-- 背景星空 -->
                            <Ellipse Canvas.Left="100" Canvas.Top="50" Width="2" Height="2" Fill="#FFFFFF" Opacity="0.8"/>
                            <Ellipse Canvas.Left="200" Canvas.Top="150" Width="1" Height="1" Fill="#FFFFFF" Opacity="0.7"/>
                            <Ellipse Canvas.Left="300" Canvas.Top="80" Width="3" Height="3" Fill="#FFFFFF" Opacity="0.9"/>
                            <Ellipse Canvas.Left="500" Canvas.Top="200" Width="2" Height="2" Fill="#FFFFFF" Opacity="0.8"/>
                            <Ellipse Canvas.Left="700" Canvas.Top="100" Width="1" Height="1" Fill="#FFFFFF" Opacity="0.7"/>
                            <Ellipse Canvas.Left="400" Canvas.Top="250" Width="2" Height="2" Fill="#FFFFFF" Opacity="0.8"/>
                            <Ellipse Canvas.Left="600" Canvas.Top="80" Width="3" Height="3" Fill="#FFFFFF" Opacity="0.9"/>
                            <Ellipse Canvas.Left="150" Canvas.Top="300" Width="1" Height="1" Fill="#FFFFFF" Opacity="0.6"/>
                            <Ellipse Canvas.Left="350" Canvas.Top="350" Width="2" Height="2" Fill="#FFFFFF" Opacity="0.8"/>
                            <Ellipse Canvas.Left="550" Canvas.Top="400" Width="1" Height="1" Fill="#FFFFFF" Opacity="0.7"/>
                            
                            <!-- 太阳 - 中心位置 -->
                            <Grid Canvas.Left="540" Canvas.Top="330" Panel.ZIndex="10">
                                <Ellipse Width="100" Height="100" Opacity="0.4">
                                    <Ellipse.Fill>
                                        <RadialGradientBrush>
                                            <GradientStop Color="#FFFFCC" Offset="0"/>
                                            <GradientStop Color="Transparent" Offset="1"/>
                                        </RadialGradientBrush>
                                    </Ellipse.Fill>
                                </Ellipse>
                                
                                <Ellipse x:Name="CenterStar" Width="80" Height="80">
                                    <Ellipse.Fill>
                                        <RadialGradientBrush>
                                            <GradientStop Color="#FFFAAA" Offset="0"/>
                                            <GradientStop Color="#FFD700" Offset="0.5"/>
                                            <GradientStop Color="#FF8C00" Offset="1"/>
                                        </RadialGradientBrush>
                                    </Ellipse.Fill>
                                    <Ellipse.Effect>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="30" Color="#FFFFCC" Opacity="0.8"/>
                                    </Ellipse.Effect>
                                </Ellipse>
                            </Grid>
                            
                            <!-- 行星轨道1 - 红色行星 -->
                            <Ellipse x:Name="Orbit1" Width="360" Height="360" Canvas.Left="360" Canvas.Top="150" 
                                   Stroke="#44FFFFFF" StrokeThickness="1" StrokeDashArray="2,2" Panel.ZIndex="1">
                                <Ellipse.RenderTransform>
                                    <SkewTransform AngleX="0" AngleY="-20" CenterX="180" CenterY="180"/>
                                </Ellipse.RenderTransform>
                            </Ellipse>
                            
                            <!-- 红色行星 -->
                            <Canvas x:Name="RedPlanetContainer" Canvas.Left="540" Canvas.Top="150" Panel.ZIndex="5">
                                <!-- 行星阴影 -->
                                <Ellipse Width="30" Height="30" Canvas.Left="0" Canvas.Top="0" Fill="#22000000">
                                    <Ellipse.RenderTransform>
                                        <TransformGroup>
                                            <TranslateTransform X="3" Y="3"/>
                                            <SkewTransform AngleX="15" AngleY="5"/>
                                        </TransformGroup>
                                    </Ellipse.RenderTransform>
                                </Ellipse>
                                
                                <!-- 行星主体 -->
                                <Ellipse x:Name="RedPlanet" Width="30" Height="30" Canvas.Left="0" Canvas.Top="0">
                                    <Ellipse.Fill>
                                        <RadialGradientBrush GradientOrigin="0.3,0.3">
                                            <GradientStop Color="#FF7777" Offset="0"/>
                                            <GradientStop Color="#FF5555" Offset="0.5"/>
                                            <GradientStop Color="#CC3333" Offset="1"/>
                                        </RadialGradientBrush>
                                    </Ellipse.Fill>
                                    <Ellipse.Effect>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="5" Color="#FF7777" Opacity="0.5"/>
                                    </Ellipse.Effect>
                                </Ellipse>
                                
                                <Canvas.Triggers>
                                    <EventTrigger RoutedEvent="Canvas.Loaded">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <!-- 使用圆形路径动画 -->
                                                <DoubleAnimationUsingPath 
                                                    Storyboard.TargetProperty="(Canvas.Left)" 
                                                    PathGeometry="M 0,180 A 180,180 0 1 1 360,180 A 180,180 0 1 1 0,180 Z" 
                                                    Source="X" Duration="0:0:20" 
                                                    RepeatBehavior="Forever"/>
                                                <DoubleAnimationUsingPath 
                                                    Storyboard.TargetProperty="(Canvas.Top)" 
                                                    PathGeometry="M 180,0 A 180,180 0 1 1 180,360 A 180,180 0 1 1 180,0 Z" 
                                                    Source="Y" Duration="0:0:20" 
                                                    RepeatBehavior="Forever"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Canvas.Triggers>
                            </Canvas>
                            
                            <!-- 行星轨道2 - 蓝色行星 -->
                            <Ellipse x:Name="Orbit2" Width="240" Height="240" Canvas.Left="420" Canvas.Top="210" 
                                   Stroke="#44FFFFFF" StrokeThickness="1" StrokeDashArray="3,3" Panel.ZIndex="2">
                                <Ellipse.RenderTransform>
                                    <SkewTransform AngleX="0" AngleY="-15" CenterX="120" CenterY="120"/>
                                </Ellipse.RenderTransform>
                            </Ellipse>
                            
                            <!-- 蓝色行星 -->
                            <Canvas x:Name="BluePlanetContainer" Canvas.Left="540" Canvas.Top="210" Panel.ZIndex="5">
                                <!-- 行星阴影 -->
                                <Ellipse Width="24" Height="24" Canvas.Left="0" Canvas.Top="0" Fill="#22000000">
                                    <Ellipse.RenderTransform>
                                        <TransformGroup>
                                            <TranslateTransform X="3" Y="3"/>
                                            <SkewTransform AngleX="15" AngleY="5"/>
                                        </TransformGroup>
                                    </Ellipse.RenderTransform>
                                </Ellipse>
                                
                                <!-- 行星主体 -->
                                <Ellipse x:Name="BluePlanet" Width="24" Height="24" Canvas.Left="0" Canvas.Top="0">
                                    <Ellipse.Fill>
                                        <RadialGradientBrush GradientOrigin="0.3,0.3">
                                            <GradientStop Color="#7777FF" Offset="0"/>
                                            <GradientStop Color="#5555FF" Offset="0.5"/>
                                            <GradientStop Color="#3333CC" Offset="1"/>
                                        </RadialGradientBrush>
                                    </Ellipse.Fill>
                                    <Ellipse.Effect>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="5" Color="#7777FF" Opacity="0.5"/>
                                    </Ellipse.Effect>
                                </Ellipse>
                                
                                <Canvas.Triggers>
                                    <EventTrigger RoutedEvent="Canvas.Loaded">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <!-- 使用圆形路径动画 -->
                                                <DoubleAnimationUsingPath 
                                                    Storyboard.TargetProperty="(Canvas.Left)" 
                                                    PathGeometry="M 0,120 A 120,120 0 1 1 240,120 A 120,120 0 1 1 0,120 Z" 
                                                    Source="X" Duration="0:0:12" 
                                                    RepeatBehavior="Forever"/>
                                                <DoubleAnimationUsingPath 
                                                    Storyboard.TargetProperty="(Canvas.Top)" 
                                                    PathGeometry="M 120,0 A 120,120 0 1 1 120,240 A 120,120 0 1 1 120,0 Z" 
                                                    Source="Y" Duration="0:0:12" 
                                                    RepeatBehavior="Forever"/>
                                                
                                                <!-- 行星自转 -->
                                                <DoubleAnimation 
                                                    Storyboard.TargetName="BluePlanet" 
                                                    Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)" 
                                                    From="0" To="360" Duration="0:0:8" 
                                                    RepeatBehavior="Forever">
                                                    <DoubleAnimation.EasingFunction>
                                                        <CircleEase EasingMode="EaseInOut"/>
                                                    </DoubleAnimation.EasingFunction>
                                                </DoubleAnimation>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Canvas.Triggers>
                                
                                <Ellipse.RenderTransform>
                                    <RotateTransform CenterX="12" CenterY="12" Angle="0"/>
                                </Ellipse.RenderTransform>
                            </Canvas>
                            
                            <!-- 主标题 -->
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" 
                                       Canvas.Left="345" Canvas.Top="180" Panel.ZIndex="20">
                                <TextBlock Text="星穹轨道" FontFamily="Microsoft YaHei" FontSize="60" TextAlignment="Center" Margin="0,0,0,10">
                                    <TextBlock.Foreground>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#FFD700" Offset="0"/>
                                            <GradientStop Color="#FF8C00" Offset="1"/>
                                        </LinearGradientBrush>
                                    </TextBlock.Foreground>
                                    <TextBlock.Effect>
                                        <DropShadowEffect ShadowDepth="3" Direction="315" Color="#000000" BlurRadius="4" Opacity="0.8"/>
                                    </TextBlock.Effect>
                                    <TextBlock.RenderTransform>
                                        <ScaleTransform ScaleX="1" ScaleY="1" CenterX="150" CenterY="30"/>
                                    </TextBlock.RenderTransform>
                                </TextBlock>
                                
                                <TextBlock Text="恒星运行与宇宙知识可视化系统" FontFamily="Microsoft YaHei" FontSize="24" Foreground="#F0F0F0" 
                                         TextAlignment="Center" Margin="0,0,0,40">
                                    <TextBlock.Effect>
                                        <DropShadowEffect ShadowDepth="2" Direction="315" Color="#000000" BlurRadius="3" Opacity="0.7"/>
                                    </TextBlock.Effect>
                                </TextBlock>
                                
                                <TextBlock Text="点击左侧按钮开始您的宇宙探索之旅" FontFamily="Microsoft YaHei" FontSize="18" Foreground="#A0A0A0" 
                                         TextAlignment="Center" Margin="0,20,0,0">
                                    <TextBlock.RenderTransform>
                                        <TranslateTransform X="0" Y="0"/>
                                    </TextBlock.RenderTransform>
                                </TextBlock>
                            </StackPanel>
                        </Canvas>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
